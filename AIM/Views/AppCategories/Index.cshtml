@model IEnumerable<AIM.Models.AppCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Name
            </th>
            <th>
                Date Created
            </th>
            <th>
                Date Updated
            </th>
            <th>
                Status
            </th>
            <th>
               Created By
            </th>
            <th>
                Updated By
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatCreatedDt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CatUpdatedDt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy.UserCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy.UserCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CatCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CatCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CatCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
