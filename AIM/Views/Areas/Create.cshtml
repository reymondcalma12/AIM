@model AIM.Models.Area

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Area</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AreaName" class="control-label"></label>
                <input asp-for="AreaName" class="form-control" />
                <span asp-validation-for="AreaName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AreaStatus" class="control-label"></label>
                <select asp-for="AreaStatus" class ="form-control" asp-items="ViewBag.AreaStatus"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="AreaCreatedBy" class="control-label"></label>
                <select asp-for="AreaCreatedBy" class ="form-control" asp-items="ViewBag.AreaCreatedBy"></select>
            </div>
            <div class="form-group">
                <label asp-for="AreaCreatedDt" class="control-label"></label>
                <input asp-for="AreaCreatedDt" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <span asp-validation-for="AreaCreatedDt" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="AreaUpdatedBy" class="control-label"></label>
                <select asp-for="AreaUpdatedBy" class ="form-control" asp-items="ViewBag.AreaUpdatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="AreaUpdatedDt" class="control-label"></label>
                <input asp-for="AreaUpdatedDt" class="form-control" />
                <span asp-validation-for="AreaUpdatedDt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
