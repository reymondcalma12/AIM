@model AIM.Models.AppSupport

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>AppSupport</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AppCode" class="control-label">Application</label>
                <select asp-for="AppCode" class ="form-control" asp-items="ViewBag.AppCode"></select>
            </div>
            <div class="form-group">
                <label asp-for="SupportCode" class="control-label">Support</label>
                <select asp-for="SupportCode" class ="form-control" asp-items="ViewBag.SupportCode"></select>
            </div>
            <div class="form-group">
                <label asp-for="SupportTypeCode" class="control-label">Support Type</label>
                <select asp-for="SupportTypeCode" class ="form-control" asp-items="ViewBag.SupportTypeCode"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CreatedBy" class="control-label"></label>
                <select asp-for="CreatedBy" class ="form-control" asp-items="ViewBag.CreatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="CreatedDt" class="control-label"></label>
                <input asp-for="CreatedDt" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <span asp-validation-for="CreatedDt" class="text-danger"></span>
            </div>
            <div class="form-group d-flex align-items-baseline gap-3">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Details" asp-controller="APPLICATIONS" asp-route-id="@Context.Request.HttpContext.Session.GetString("AppCode")" class="btn btn-secondary text-white">Back</a>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
