@model AIM.Models.Department

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DeptName" class="control-label"></label>
                <input asp-for="DeptName" class="form-control" />
                <span asp-validation-for="DeptName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeptStatus" class="control-label"></label>
                <select asp-for="DeptStatus" class ="form-control" asp-items="ViewBag.DeptStatus"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DeptCreatedBy" class="control-label"></label>
                <select asp-for="DeptCreatedBy" class ="form-control" asp-items="ViewBag.DeptCreatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DeptCreatedDt" class="control-label"></label>
                <input asp-for="DeptCreatedDt" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <span asp-validation-for="DeptCreatedDt" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DeptUpdatedBy" class="control-label"></label>
                <select asp-for="DeptUpdatedBy" class ="form-control" asp-items="ViewBag.DeptUpdatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="DeptUpdatedDt" class="control-label"></label>
                <input asp-for="DeptUpdatedDt" class="form-control" />
                <span asp-validation-for="DeptUpdatedDt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
