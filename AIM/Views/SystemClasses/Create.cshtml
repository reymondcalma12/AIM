@model AIM.Models.SystemClass

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>SystemClass</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassName" class="control-label"></label>
                <input asp-for="ClassName" class="form-control" />
                <span asp-validation-for="ClassName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassStatus" class="control-label"></label>
                <select asp-for="ClassStatus" class ="form-control" asp-items="ViewBag.ClassStatus"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ClassCreatedBy" class="control-label"></label>
                <select asp-for="ClassCreatedBy" class ="form-control" asp-items="ViewBag.ClassCreatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ClassCreatedDt" class="control-label"></label>
                <input asp-for="ClassCreatedDt" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <span asp-validation-for="ClassCreatedDt" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ClassUpdatedBy" class="control-label"></label>
                <select asp-for="ClassUpdatedBy" class ="form-control" asp-items="ViewBag.ClassUpdatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="ClassUpdatedDt" class="control-label"></label>
                <input asp-for="ClassUpdatedDt" class="form-control" />
                <span asp-validation-for="ClassUpdatedDt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
