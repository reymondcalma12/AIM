@model AIM.Models.OperatingSystem

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>OperatingSystem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="OsName" class="control-label"></label>
                <input asp-for="OsName" class="form-control" />
                <span asp-validation-for="OsName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OsStatus" class="control-label"></label>
                <select asp-for="OsStatus" class ="form-control" asp-items="ViewBag.OsStatus"></select>
            </div>
            <div class="form-group">
                <label asp-for="OsCreatedBy" class="control-label"></label>
                <select asp-for="OsCreatedBy" class ="form-control" asp-items="ViewBag.OsCreatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="OsCreatedDt" class="control-label"></label>
                <input asp-for="OsCreatedDt" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <span asp-validation-for="OsCreatedDt" class="text-danger"></span>
            </div>
            <div class="form-group" hidden >
                <label asp-for="OsUpdatedBy" class="control-label"></label>
                <select asp-for="OsUpdatedBy" class ="form-control" asp-items="ViewBag.OsUpdatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="OsUpdatedDt" class="control-label"></label>
                <input asp-for="OsUpdatedDt" class="form-control" />
                <span asp-validation-for="OsUpdatedDt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
