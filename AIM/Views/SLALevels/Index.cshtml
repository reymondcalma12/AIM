@model IEnumerable<AIM.Models.SLALevel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               Name
            </th>
            
            <th>
                Status
            </th>
            <th>
               Created By
            </th>
            <th>Date Created</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
               
            <td>
                @Html.DisplayFor(modelItem => item.SLALevelName)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>


                <td>
                    @Html.DisplayFor(modelItem => item.SLALevelCreatedBy)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SLALevelCreatedDt)
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SLALevelCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SLALevelCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SLALevelCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
