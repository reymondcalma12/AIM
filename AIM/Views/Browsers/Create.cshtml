@model AIM.Models.Browser

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Browser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrowserName" class="control-label"></label>
                <input asp-for="BrowserName" class="form-control" />
                <span asp-validation-for="BrowserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrowserStatus" class="control-label"></label>
                <select asp-for="BrowserStatus" class ="form-control" asp-items="ViewBag.BrowserStatus"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="BrowserCreatedBy" class="control-label"></label>
                <select asp-for="BrowserCreatedBy" class ="form-control" asp-items="ViewBag.BrowserCreatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="BrowserCreatedDt" class="control-label"></label>
                <input asp-for="BrowserCreatedDt" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" />
                <span asp-validation-for="BrowserCreatedDt" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="BrowserUpdatedBy" class="control-label"></label>
                <select asp-for="BrowserUpdatedBy" class ="form-control" asp-items="ViewBag.BrowserUpdatedBy"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="BrowserUpdatedDt" class="control-label"></label>
                <input asp-for="BrowserUpdatedDt" class="form-control" />
                <span asp-validation-for="BrowserUpdatedDt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
