@model IEnumerable<AIM.Models.FunctionalArea>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                 Name
            </th>
  
            <th>
                Status
            </th>
     
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FunctionalName)
            </td>
     
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>
  
            <td>
                <a asp-action="Edit" asp-route-id="@item.FunctionalCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FunctionalCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FunctionalCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
